<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/color_leaderboard_blue"
                android:endColor="@color/gblue_light"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gGray" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="@color/gGray"
                android:startColor="@color/gGray"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gGray" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/gblue_dark"
                android:startColor="@color/gblue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/gGray" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
</selector>